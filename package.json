{
	"name": "vscode-api-client",
	"displayName": "VS Code API Client",
	"description": "A feature-rich API client for Visual Studio Code, similar to Postman.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "apiClient",
					"title": "API Client",
					"icon": "$(globe)"
				}
			]
		},
		"views": {
			"apiClient": [
				{
					"id": "apiClient.sidebar",
					"name": "Sidebar",
					"type": "webview",
					"icon": "$(globe)"
				}
			]
		},
		"commands": [
			{
				"command": "apiClient.openRequest",
				"title": "Open API Client",
				"icon": "$(globe)"
			},
			{
				"command": "apiClient.createRequest",
				"title": "Create Request",
				"icon": "$(add)"
			},
			{
				"command": "apiClient.deleteRequest",
				"title": "Delete Request",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "apiClient.openRequest",
					"when": "view == apiClient.sidebar",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "apiClient.createRequest",
					"when": "view == apiClient.sidebar",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "cross-env NODE_ENV=production webpack",
		"prewatch": "rimraf dist",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts,tsx --fix",
		"test": "jest --passWithNoTests --silent",
		"test:unit": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:vscode": "npm run compile-tests && vscode-test",
		"test:verbose": "jest --verbose"
	},
	"devDependencies": {
		"@prettier/plugin-xml": "^3.4.2",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/glob": "^8.1.0",
