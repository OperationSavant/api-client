{
	"name": "vscode-api-client",
	"displayName": "VS Code API Client",
	"description": "A feature-rich API client for Visual Studio Code, similar to Postman.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:apiClient.collections",
		"onView:apiClient.history",
		"onView:apiClient.environment"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "apiClient",
					"title": "API Client",
					"icon": "$(globe)"
				}
			]
		},
		"views": {
			"apiClient": [
				{
					"id": "apiClient.collections",
					"name": "Collections",
					"when": "true"
				},
				{
					"id": "apiClient.history",
					"name": "History",
					"when": "true"
				},
				{
					"id": "apiClient.environment",
					"name": "Environment Variables",
					"when": "true"
				}
			]
		},
		"commands": [
			{
				"command": "apiClient.openRequest",
				"title": "Open API Client",
				"icon": "$(globe)"
			},
			{
				"command": "apiClient.createCollection",
				"title": "Create Collection",
				"icon": "$(add)"
			},
			{
				"command": "apiClient.deleteCollection",
				"title": "Delete Collection",
				"icon": "$(trash)"
			},
			{
				"command": "apiClient.createRequest",
				"title": "Create Request",
				"icon": "$(add)"
			},
			{
				"command": "apiClient.deleteRequest",
				"title": "Delete Request",
				"icon": "$(trash)"
			},
			{
				"command": "apiClient.clearHistory",
				"title": "Clear History",
				"icon": "$(clear-all)"
			},
			{
				"command": "apiClient.createEnvironment",
				"title": "Create Environment",
				"icon": "$(add)"
			},
			{
				"command": "apiClient.deleteEnvironment",
				"title": "Delete Environment",
				"icon": "$(trash)"
			},
			{
				"command": "apiClient.refreshCollections",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "apiClient.refreshHistory",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "apiClient.refreshEnvironment",
				"title": "Refresh",
				"icon": "$(refresh)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "apiClient.openRequest",
					"when": "view == apiClient.collections",
					"group": "navigation"
				},
				{
					"command": "apiClient.createCollection",
					"when": "view == apiClient.collections",
					"group": "navigation"
				},
				{
					"command": "apiClient.refreshCollections",
					"when": "view == apiClient.collections",
					"group": "navigation"
				},
				{
					"command": "apiClient.clearHistory",
					"when": "view == apiClient.history",
					"group": "navigation"
				},
				{
					"command": "apiClient.refreshHistory",
					"when": "view == apiClient.history",
					"group": "navigation"
				},
				{
					"command": "apiClient.createEnvironment",
					"when": "view == apiClient.environment",
					"group": "navigation"
				},
				{
					"command": "apiClient.refreshEnvironment",
					"when": "view == apiClient.environment",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "apiClient.createRequest",
					"when": "view == apiClient.collections && viewItem == collection",
					"group": "inline"
				},
				{
					"command": "apiClient.deleteCollection",
					"when": "view == apiClient.collections && viewItem == collection",
					"group": "inline"
				},
				{
					"command": "apiClient.deleteRequest",
					"when": "view == apiClient.collections && viewItem == request",
					"group": "inline"
				},
				{
					"command": "apiClient.deleteEnvironment",
					"when": "view == apiClient.environment && viewItem == environment",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "cross-env NODE_ENV=production webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts,tsx --fix",
		"test": "jest --passWithNoTests --silent",
		"test:unit": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:vscode": "npm run compile-tests && vscode-test",
		"test:verbose": "jest --verbose"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/glob": "^8.1.0",
		"@types/jest": "^30.0.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "20.x",
		"@types/node-fetch": "^2.6.12",
		"@types/vscode": "^1.70.0",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.3.9",
		"cross-env": "^10.0.0",
		"eslint": "^8.57.0",
		"glob": "^8.1.0",
		"jest": "^30.0.5",
		"jest-environment-jsdom": "^30.0.5",
		"mocha": "^10.4.0",
		"postcss-cli": "^11.0.1",
		"text-encoding": "^0.7.0",
		"ts-jest": "^29.4.0",
		"ts-loader": "^9.5.1",
		"typescript": "~5.5.4",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"@radix-ui/react-checkbox": "^1.3.2",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-progress": "^1.1.7",
		"@radix-ui/react-scroll-area": "^1.2.9",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "^1.2.5",
		"@radix-ui/react-tabs": "^1.1.12",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@tailwindcss/postcss": "^4.1.11",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"autoprefixer": "^10.4.21",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"css-loader": "^7.1.2",
		"lucide-react": "^0.532.0",
		"mini-css-extract-plugin": "^2.9.2",
		"monaco-editor": "^0.52.2",
		"monaco-editor-webpack-plugin": "^7.1.0",
		"node-fetch": "^2.7.0",
		"postcss": "^8.5.6",
		"postcss-loader": "^8.1.1",
		"process": "^0.11.10",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-resizable-panels": "^3.0.6",
		"style-loader": "^4.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"tailwindcss-animate": "^1.0.7",
		"tw-animate-css": "^1.3.6"
	}
}
